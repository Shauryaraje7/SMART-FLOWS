  .about-hero, .mission-section {
    flex-direction: column;
    text-align: center;
  }
  
  .mission-content h2::after {
    left: 50%;
    transform: translateX(-50%);
  }
  
  .mission-content p {
    margin-left: auto;
    margin-right: auto;
  }
  
  .mission-points {
    grid-template-columns: 1fr;
  }
  
  .stats-section {
    flex-direction: column;
    gap: 2rem;
  }
}

@media (max-width: 480px) {
  .hero-content, .mission-content {
    padding: 1rem;
  }
  
  .hero-buttons, .cta-buttons {
